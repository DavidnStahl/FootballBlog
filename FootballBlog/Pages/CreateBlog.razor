@page "/createblogg/";
@inherits CreateBlogBase;

<EditForm Model="@BlogViewModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>Edit Blogg</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">
            Title
        </label>
        <div class="col-sm-10">
            <InputText id="title" class="form-control" placeholder="Title" @bind-Value="@BlogViewModel.Title" />
            <ValidationMessage For="@(() => BlogViewModel.Title)" />
        </div>
        <label for="title" class="col-sm-2 col-form-label">
            Category
        </label>
        <div class="col-sm-10">
            <CustomInputSelect id="category" class="form-control" placeholder="Category" @bind-Value="@BlogViewModel.Category">
                @foreach (var category in Categories)
                {
                    <option value="@category">@category</option>
                }
            </CustomInputSelect>
        </div>
        <label for="text" class="col-sm-2 col-form-label">
            Text
        </label>
        <div class="col-sm-10">
            <InputText id="title" class="form-control" placeholder="text" @bind-Value="@BlogViewModel.Text" />
            <ValidationMessage For="@(() => BlogViewModel.Text)" />
        </div>
        <div class="form-check">
            <InputCheckbox class="form-check-input" id="published" @bind-Value="@BlogViewModel.Published" />
            <label class="form-check-label" for="published">Publish</label>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</EditForm>
