@page "/bloggTeaser/{id}";

@inherits BlogTeaserBase

<div class="col-sm-8 col-md-6 col-lg6">
    <div class="card">
        <div class="card-header">
            <h1>@BlogViewModel.Title</h1>
        </div>
        <div class="card-body text-center">
            <p>@BlogViewModel.Text</p>
        </div>
        <div class="card-footer text-center">
            <a href="@($"/bloggdetails/{BlogViewModel.Id}")" class="btn btn-primary">Read</a>
        </div>
    </div>
</div>
